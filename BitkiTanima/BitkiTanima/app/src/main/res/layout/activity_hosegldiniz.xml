<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan2"
    tools:context=".hosegldiniz">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/kayitKullaniciFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_marginStart="106dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="105dp"
        android:src="@drawable/logo2"
        app:civ_border_color="@color/buttonColor"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/giris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="306dp"
        android:background="@drawable/buttonarkaplan"
        android:onClick="girisYapButton"
        android:text="GiriÅŸ"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="115dp"
        android:fontFamily="@font/font3"
        android:text="Hosgeldiniz"
        android:textColor="@color/buttonColor"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayitKullaniciFoto" />


</androidx.constraintlayout.widget.ConstraintLayout>